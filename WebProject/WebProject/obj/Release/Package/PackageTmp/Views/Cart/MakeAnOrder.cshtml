
@{
    ViewBag.Title = "MakeAnOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <nav class="breadcrumbs">
                            <ul>
                                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                                <li><span>Checkout</span></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>

            @model WebProject.ModelAccessLayer.Model.OrderModel

            <div class="container-fluid">
                @using (Html.BeginForm("MakeAnOrder", "Cart", FormMethod.Post, new { @class = "needs-validation", @novalidate = "novalidate" }))
                {
                    <div class="row">
                        <div class="col-lg-12 mb-3">
                            <div class="Checkout p-3 h-100 bg-white">
                                <h1 class="section-title h5"><span>Billing address</span></h1>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.OrderInfo.Name, new { @class = "form-label required" })
                                        @Html.TextBoxFor(model => model.OrderInfo.Name, new { @class = "form-control", placeholder = "John Doe" })
                                        @Html.ValidationMessageFor(model => model.OrderInfo.Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.OrderInfo.Email, new { @class = "form-label required" })
                                        @Html.TextBoxFor(model => model.OrderInfo.Email, new { @class = "form-control", placeholder = "doe@mail.com" })
                                        @Html.ValidationMessageFor(model => model.OrderInfo.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.OrderInfo.Phone, new { @class = "form-label required" })
                                        @Html.TextBoxFor(model => model.OrderInfo.Phone, new { @class = "form-control", placeholder = "+123456789" })
                                        @Html.ValidationMessageFor(model => model.OrderInfo.Phone, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.OrderInfo.Country, new { @class = "form-label required" })
                                        @Html.TextBoxFor(model => model.OrderInfo.Country, new { @class = "form-control", placeholder = "Country" })
                                        @Html.ValidationMessageFor(model => model.OrderInfo.Country, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.OrderInfo.City, new { @class = "form-label required" })
                                        @Html.TextBoxFor(model => model.OrderInfo.City, new { @class = "form-control", placeholder = "City name" })
                                        @Html.ValidationMessageFor(model => model.OrderInfo.City, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.OrderInfo.Address, new { @class = "form-label required" })
                                        @Html.TextBoxFor(model => model.OrderInfo.Address, new { @class = "form-control", placeholder = "Street, house num, flat num" })
                                        @Html.ValidationMessageFor(model => model.OrderInfo.Address, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col">
                                        @Html.LabelFor(model => model.OrderInfo.Comment, new { @class = "form-label" })
                                        @Html.TextAreaFor(model => model.OrderInfo.Comment, new { @class = "form-control", rows = "3", placeholder = "Order note..." })
                                    </div>

                                    <div class="d-grid mt-3">
                                        <button type="submit" class="btn btn-warning">Submit and confirm the order(Papa)</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <script>
    function formValid() {
        var form = document.querySelector('.needs-validation');
        if (!form.checkValidity()) {
            form.classList.add('was-validated');
            return false;
        }
        return true;
    }
            </script>
