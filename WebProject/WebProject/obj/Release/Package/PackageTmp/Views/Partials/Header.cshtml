<header class="header">
    <!-- MAIN BAR -->
    <div class="header-bottom sticky-top" id="header-nav">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <!-- Hidden menu + hidden buttons -->
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-start" id="offcanvasNavbar" tabindex="-1"
                     aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                                aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Catalog</a>
                                <ul class="dropdown-menu">
                                    @if (WebProject.Controllers.HomeController.AllCategories != null)
                                    {
                                        foreach (var category in WebProject.Controllers.HomeController.AllCategories)
                                        {
                                            if (category != null)
                                            {
                                                <li>
                                                    <a class="dropdown-item arrow-down" href="javascript:void(0);" onclick="toggleSubcategories(this)">@category.Name</a>
                                                    <ul class="dropdown-menu subcategory-list">
                                                        @if (category.Subcategories != null && category.Subcategories.Any())
                                                        {
                                                            foreach (var subcategory in category.Subcategories)
                                                            {
                                                                <li><a class="dropdown-item text-light" href="@Url.Action("Items", "Catalog", new { idChildCategory = subcategory.IdCategory })">@subcategory.Name</a></li>
                                                            }
                                                        }
                                                    </ul>
                                                </li>
                                            }
                                        }
                                    }
                                </ul>
                            </li>
                        </ul>
                        <!-- Search Form for mobile -->
                        <form id="searchFormOffcanvas" class="d-none" action="@Url.Action("Search", "Home")" method="get" onsubmit="return validateSearchForm()">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" name="text" id="searchInputOffcanvas" placeholder="Searching..." aria-label="Searching..." aria-describedby="button-search-offcanvas">
                                <button class="btn btn-outline-warning btn-sm" type="submit" id="button-search-offcanvas">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <!-- Search Form for desktop -->
                    <form id="searchForm" class="d-flex me-2" action="@Url.Action("Search", "Home")" method="get" onsubmit="return validateSearchForm()">
                        <input class="form-control me-2" type="search" name="text" id="searchInput" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-warning" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>

                    <!-- Account -->
                    @if (Session["UserData"] != null)
                    {
                        var userData = (WebProject.ModelAccessLayer.Model.UserData)Session["UserData"];
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-light" onclick="location.href='@Url.Action("Buy", "Cart")'"><i class="fa-solid fa-cart-shopping"></i> Buy</button>
                            <button class="btn btn-sm btn-outline-light" onclick="location.href='@Url.Action("Delivery", "Cart")'">My Orders</button>

                            @if (userData.StatusUser == WebProject.Domain.Enum.StatusUser.Admin)
                            {
                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Admin</button>
                                <ul class="dropdown-menu dropdown-menu-end text-light">
                                    <li><a class="dropdown-item text-light" href="@Url.Action("ViewProducts", "Admin")">View Products</a></li>
                                    <li><a class="dropdown-item text-light" href="@Url.Action("NewProduct", "Admin")">Add a Product</a></li>
                                    <li><a class="dropdown-item text-light" href="@Url.Action("ViewDelivery", "Admin")">View Delivery</a></li>
                                </ul>
                            }
                            <button class="btn btn-sm btn-outline-light" onclick="location.href='@Url.Action("LogOut", "Account")'">Log Out</button>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-light me-2" href="@Url.Action("Registration", "Account")">Sign Up</a>
                        <a class="btn btn-sm btn-outline-light" href="@Url.Action("Login", "Account")">Sign In</a>
                    }
                </div>
            </div>
        </nav>
    </div>
    </
